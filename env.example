# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/qahub?schema=public"

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Tenant Configuration
TENANT_DEFAULT_PLAN=free
ENABLE_ANALYTICS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Redis (Optional - for caching and queues)
REDIS_URL=redis://localhost:6379

# External Services (Optional)
JIRA_API_URL=
JIRA_API_TOKEN=
GITLAB_API_URL=
GITLAB_API_TOKEN=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@qahub.com
FRONTEND_URL=http://localhost:3000

# Note: Gmail SMTP limitation
# Gmail doesn't allow sending from a different email address than SMTP_USER.
# The "from" field will always show the authenticated Gmail account (SMTP_USER).
# To use a custom "from" address like noreply@qahub.com, you need:
# - Gmail Workspace with verified domain, OR
# - A dedicated email service (SendGrid, AWS SES, Mailgun, etc.)

